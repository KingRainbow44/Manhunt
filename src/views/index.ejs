<html lang="en">
    <head>
        <title>Manhunt</title>
        
        <!-- Stylesheet. -->
        <link rel="stylesheet" href="/public/style.css">
        
        <!-- Dependencies. -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        <script src="https://maps.google.com/maps/api/js?key=<%= apiKey %>"></script>
        <script src="/public/network.js"></script>
        
        <!-- Load scripts. -->
        <script src="/public/main.js"></script>
        <script src="/public/runner.js"></script>
        <script src="/public/hunter.js"></script>
        <script src="/public/game.js"></script>

        <!-- Load HTML from Express. -->
        <script src="<%= script %>"></script>
        
        <!-- Load data. -->
        <script>
            // Create a network interface.
            createInterface("<%= address %>");
        </script>
        
        <!-- Meta tags. -->
        <meta name="viewport" content="width=device-width" />

        <meta content="Magix's IRL Manhunt" property="og:site_name">
        <meta content="Manhunt" property="og:title">
        <meta content="Join a game of manhunt with <%= playerCount %> others!" property="og:description">
        <meta content="https://cdn.ponjo.club/raw/ef78573c86dac2f9b4d2cface180df8e" property="og:image:url">
        <meta content="https://cdn.ponjo.club/raw/ef78573c86dac2f9b4d2cface180df8e" property="og:image:secure_url">
        <meta content="<%= color %>" property="theme-color">
    </head>

    <body>
        <!-- This is where UI elements are placed. -->
        <div id="ui">
            <div id="nameInput">
                <input id="username" type="text" autocomplete="off" />
                <input id="submit" type="submit" value="Join Game" onclick="join()"/>
            </div>
            
            <button onclick="refreshMap();">Refresh Map</button>
            <button onclick="changeRole(1);">Change to Hunter</button>
            <button onclick="changeRole(0);">Change to Runner</button>
            
            <!-- Administrative UI actions. -->
            <div id="admin" style="display: none">
                <button onclick="startGame();">Start Game</button>
                <button onclick="endGame();">Stop Game</button>
            </div>
        </div>
        
        <br> <!-- Line break between chat & UI. -->

        <!-- This is where chat messages are placed. -->
        <div id="chat">
            <div id="chatContainer" class="box"></div>
            <input id="chatInput" type="text" autocomplete="off" />
            <input id="chatSubmit" onclick="sendMessage()" type="submit" value="Send" />
        </div>

        <br> <!-- Line break between map & chat. -->
        
        <!-- This is where the map is placed. -->
        <div id="map"></div>
    </body> 
</html>